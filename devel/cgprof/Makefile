		dotty:${PORTSDIR}/graphics/graphviz

NO_BUILD=	yes
MAKE_ENV=	prefix=${PREFIX}

MAN1=		cgprof.1
PLIST_FILES=	bin/cgprof

NO_STAGE=	yes
.include <bsd.port.mk>
