PORTNAME=	cgprof
PORTVERSION=	1.2
PORTREVISION=	4
CATEGORIES=	devel
MASTER_SITES=	http://mvertes.free.fr/download/

MAINTAINER=	adam.freebsd@fastmail.fm
COMMENT=	Generates colored graphs for profiled executables using gcc and gprof

