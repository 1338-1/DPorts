PORTNAME=	nologin
PORTVERSION=	1.0
PORTREVISION=	1
CATEGORIES=	sysutils
MASTER_SITES=	${MASTER_SITE_LOCAL}
MASTER_SITE_SUBDIR=wes

MAINTAINER=	ports@FreeBSD.org
COMMENT=	Refuse a login to a user, and make a note of it in syslog

PLIST_FILES=	bin/nologin man/man8/${PORTNAME}.8.gz

.include <bsd.port.mk>
