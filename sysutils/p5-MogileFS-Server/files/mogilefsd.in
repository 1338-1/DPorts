#!/bin/sh

# $FreeBSD: sysutils/p5-MogileFS-Server/files/mogilefsd.in 310494 2013-01-16 15:07:59Z tobez $
#
# PROVIDE: mogilefsd
# REQUIRE: LOGIN cleanvar
# KEYWORD: shutdown

. /etc/rc.subr

name=mogilefsd
rcvar=mogilefsd_enable

load_rc_config mogilefsd

: ${mogilefsd_enable:="NO"}

required_files=%%PREFIX%%/etc/mogtracker.conf

command="%%PREFIX%%/bin/${name}"
command_args="--config=%%PREFIX%%/etc/mogtracker.conf"

run_rc_command "$1"
