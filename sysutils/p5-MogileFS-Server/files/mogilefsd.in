#!/bin/sh

# $FreeBSD: ports/sysutils/p5-MogileFS-Server/files/mogilefsd.in,v 1.3 2012/11/17 06:01:40 svnexp Exp $
#
# PROVIDE: mogilefsd
# REQUIRE: LOGIN cleanvar
# KEYWORD: shutdown

. /etc/rc.subr

name=mogilefsd
rcvar=mogilefsd_enable

load_rc_config mogilefsd

: ${mogilefsd_enable:="NO"}

required_files=%%PREFIX%%/etc/mogtracker.conf

command_args="--config=%%PREFIX%%/etc/mogtracker.conf"

run_rc_command "$1"
