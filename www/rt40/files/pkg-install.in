PATH=/usr/sbin:/usr/bin:/bin ; export PATH

case $2 in

    POST-INSTALL)

	# Install a default config file if none exists
	if [ ! -f ${CFG_FILE} ] ; then
	    cp -p ${CFG_FILE}-dist ${CFG_FILE}
	fi
	;;
esac

