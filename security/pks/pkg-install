#!/bin/sh
#
# $FreeBSD: security/pks/pkg-install 300897 2012-07-14 14:29:18Z beat $

PKGNAME=$1
STAGE=$2

case ${STAGE} in
PRE-INSTALL)
	;;
POST-INSTALL)
	DBDIR=/var/pks/db
	MAILDIR=/var/pks/incoming

	mkdir -p ${DBDIR} ${MAILDIR}
	;;
*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
