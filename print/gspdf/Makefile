PORTNAME=	gspdf
PORTVERSION=	0.5
CATEGORIES=	print gnustep
MASTER_SITES=	${MASTER_SITE_SAVANNAH}
MASTER_SITE_SUBDIR=	gap
DISTNAME=	GSPdf-${PORTVERSION}

