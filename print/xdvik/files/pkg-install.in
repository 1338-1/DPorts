#!/bin/sh
# $FreeBSD: print/xdvik/files/pkg-install.in 340719 2014-01-22 15:52:06Z mat $

PAPERSIZE=%%PAPERSIZE%%
XDVIDIR=%%XDVIDIR%%
XDVICONFDIR=%%XDVICONFDIR%%
MKTEXLSR=%%MKTEXLSR%%
TEXCONFIGBIN=%%TEXCONFIGBIN%%
PATH=${PATH}:%%LOCALBASE%%/bin

case $2 in
POST-INSTALL)
	${MKTEXLSR}
	case ${PAPERSIZE} in
	letter)
		${TEXCONFIGBIN} xdvi paper us
	;;
	*)
		${TEXCONFIGBIN} xdvi paper a4
	;;
	esac
	${MKTEXLSR}
	echo "======"
	echo "NOTICE: Before upgrading, you may want to make " \
		"a backup of the following file(s):"
	echo "    ${XDVICONFDIR}/XDvi"
	echo "======"
;;
DEINSTALL)
	# do nothing
	${MKTEXLSR}
;;
esac
