#!/bin/sh
#
# $FreeBSD: head/mail/mailutils/files/comsatd.in 429742 2016-12-28 12:01:54Z danfe $
#
# PROVIDE: comsatd
# REQUIRE: DAEMON
# BEFORE: mail
# KEYWORD: shutdown
#

. /etc/rc.subr

name="comsatd"
rcvar=comsatd_enable
command="%%PREFIX%%/sbin/${name}"
pidfile="/var/run/${name}.pid"

load_rc_config ${name}

comsatd_enable=${comsatd_enable:-"NO"}
comsatd_flags=${comsatd_flags:-""}

run_rc_command "$1"
