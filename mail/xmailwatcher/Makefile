PORTNAME=	xmailwatcher
PORTVERSION=	1.6
PORTREVISION=	2
CATEGORIES=	mail
MASTER_SITES=	http://www.dcs.ed.ac.uk/home/gdmr/X11/
DISTNAME=	xmailwatcher

MAINTAINER=	ports@FreeBSD.org
COMMENT=	Mailbox checker which displays sender and subject lines of mails

